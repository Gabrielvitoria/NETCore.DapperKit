<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Version>2.0.0</Version>
    <Company>Lvcc</Company>
    <Authors>Lvcc</Authors>
    <Description>Dapper extensions, suport expression to sql ,so you can use dapper like ef.</Description>
    <Copyright>Copyright 2017 (c) Lvcc. All rights reserved</Copyright>
    <PackageProjectUrl>https://github.com/myloveCc/NETCore.DapperKit</PackageProjectUrl>
    <RepositoryUrl>https://github.com/myloveCc/NETCore.DapperKit</RepositoryUrl>
    <PackageTags>Dapper ExrepssionToSql</PackageTags>
    <PackageLicenseUrl>https://github.com/myloveCc/NETCore.DapperKit/blob/master/License</PackageLicenseUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>NETCore.DapperKit 2.0.0, update to .net core 2.0 rtm</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG;COREFX;ASYNC;NETCOREAPP1_1</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>TRACE;COREFX;ASYNC;RELEASE;NETCOREAPP1_1</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="1.50.2" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="2.0.0" />
    <PackageReference Include="System.Data.SqlClient" Version="4.4.0" />
  </ItemGroup>

</Project>